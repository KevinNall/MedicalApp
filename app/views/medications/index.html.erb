<h1>User Medications</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Drug name</th>
      <th>Time per day</th>
      <th>Dose</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medications.each do |medication| %>
      <tr>
        <td><%= medication.drug_name %></td>
        <td><%= medication.time_per_day %></td>
        <td><%= medication.dose %></td>
        <td><%= medication.comment %></td>
        <td><%= link_to 'Show', medication %></td>
        <td><%= link_to 'Edit', edit_medication_path(medication) %></td>
        <td><%= link_to 'Destroy', medication, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Medication', new_medication_path %>
